<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2
          http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <!-- Assembles a package that can run ksql -->
    <id>package</id>
    <formats>
        <format>dir</format>
        <format>tgz</format>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>true</includeBaseDirectory>
    <baseDirectory>ksql</baseDirectory>
    <fileSets>
        <fileSet>
            <directory>${project.parent.basedir}</directory>
            <outputDirectory></outputDirectory>
            <includes>
                <include>README*</include>
                <include>LICENSE*</include>
                <include>ksq-lrocket.png</include>
                <include>screencast.jpg</include>
                <include>licenses/</include>
                <include>notices/</include>
                <include>bin/</include>
                <include>config/</include>
                <include>docs/</include>
                <include>ksql-clickstream-demo/</include>
            </includes>
            <excludes>
                <exclude>ksql-clickstream-demo/pom.xml</exclude>
                <exclude>ksql-clickstream-demo/src/</exclude>
                <exclude>ksql-clickstream-demo/target/</exclude>
            </excludes>
        </fileSet>
    </fileSets>
    <dependencySets>
        <dependencySet>
            <outputDirectory>share/java/ksql/</outputDirectory>
            <useProjectArtifact>true</useProjectArtifact>
            <scope>runtime</scope>
            <useTransitiveFiltering>true</useTransitiveFiltering>
        </dependencySet>
    </dependencySets>
</assembly>
